#include <iostream>
using namespace std;

/* Your solution goes here  */
double PyramidVolume(double length, double width, double height) {
   double baseArea = length * width;
   double volume = baseArea * height * (1.0/3.0);
   return volume;
}

int main() {
   double userLength;
   double userWidth;
   double userHeight;

   cin >> userLength;
   cin >> userWidth;
   cin >> userHeight;

   cout << "Volume: " << PyramidVolume(userLength, userWidth, userHeight) << endl;

   return 0;
}