#include <iostream>
#include <math.h>
#include <string>
using namespace std;

int main() {
int num = 0;
int count = 0;
int currentNum = 0;

cout << "Enter a integer: " << endl;
cin >> num;

currentNum = num;

if (num > 0) {
while (num > 0) {
count++;
num = num / 10;
}
cout << currentNum << " has " << count << " digits." << endl;
}

else {
cout << currentNum << " is not a positive integer." << endl;
}

system("pause");
return 0;
}