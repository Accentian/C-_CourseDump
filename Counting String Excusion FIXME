#include <iostream>
#include <string>
#include <cctype>
using namespace std;

int main() {
   string userText;
   // Add more variables as needed
   int count = 0;
   
   getline(cin, userText);  // Gets entire line, including spaces. 
   
   /* Type your code here. */
   for (int i = 0; i < userText.size(); i++) {
      char currentChar = userText.at(i);
      
      if (isalpha(userText.at(i))) {
         count++;
      }
      else if (isalpha(userText.at(i))) {
         count++;
      }
      else if (currentChar == '!'){
         count++;
      }
      else {
         continue;
      }
   }
   
   cout << count << endl;
   return 0;
}