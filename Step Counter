#include <iostream>
#include <iomanip>
using namespace std;

/* Define your function here */
double StepsToMiles(int userSteps) {
   return (userSteps / 2000.0);
   
}

int main() {
   /* Type your code here */
   int userSteps;
   cin >> userSteps;
   
   cout << fixed << setprecision(2);
   cout << StepsToMiles(userSteps) << endl;
   
   return 0;
}